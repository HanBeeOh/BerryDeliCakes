= form_for @flavor do |f|
  - if @flavor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@flavor.errors.count, "error")} prohibited this flavor from being saved:"
      %ul
        - @flavor.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :flavorImgURL
    = f.text_field :flavorImgURL
  .actions
    = f.submit 'Save'
