= form_for @cake_price do |f|
  - if @cake_price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cake_price.errors.count, "error")} prohibited this cake_price from being saved:"
      %ul
        - @cake_price.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :cake
    = f.text_field :cake
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
